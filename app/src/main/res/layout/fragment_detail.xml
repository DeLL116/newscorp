<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.demo.chris.newscorpdemo.ui.main.DetailFragment">

    <com.nochino.support.androidui.views.SwappableImageCardView
            android:id="@+id/swappableImageCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:cardOrientation="vertical"
            custom:cardImageWidth="@dimen/img_detail_width"
            custom:cardImageHeight="@dimen/img_detail_height"/>

</LinearLayout>
